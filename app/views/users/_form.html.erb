<%= simple_form_for(@user) do |f| -%>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :first_name, label: 'Nome' %>
    <%= f.input :last_name, label: 'Sobrenome' %>
    <%= f.input :email, label: 'E-mail' %>
    <% if can? :manage, User %>
      <%= f.input :role, label: 'Categoria', :collection => User::ROLES.collect {|r| [r.humanize, r]}, :prompt => false %>
    <% end %>
  </div>

  <div class="actions">
    <ul class="inline-list">
      <li><%= f.submit "Atualizar", class: "button" %></li>
      <li><%= link_to "Excluir", @user, :method => :delete, :confirm => "Tem certeza?", class: "button secondary" %></li>
  </div>

<% end %>