<% if can? :read, @enterprises %>
  <h1>Listing enterprises</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Corporate name</th>
        <th>Phone</th>
        <th>Cnpj</th>
        <th>State registration</th>
        <th>Adress</th>
        <th>Number</th>
        <th>District</th>
        <th>City</th>
        <th>Cep</th>
        <th>User</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @enterprises.each do |enterprise| %>
        <tr>
          <td><%= enterprise.name %></td>
          <td><%= enterprise.corporate_name %></td>
          <td><%= enterprise.phone %></td>
          <td><%= enterprise.cnpj %></td>
          <td><%= enterprise.state_registration %></td>
          <td><%= enterprise.adress %></td>
          <td><%= enterprise.number %></td>
          <td><%= enterprise.district %></td>
          <td><%= enterprise.city %></td>
          <td><%= enterprise.cep %></td>
          <td><%= enterprise.user.email %></td>
          <td><%= link_to 'Exbir', enterprise %></td>
          <td><%= link_to 'Edita', edit_enterprise_path(enterprise) %></td>
          <td><%= link_to 'Excluir', enterprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Nova Empresa', new_enterprise_path %>
<% else %>
  <h1>Sem permiss√£o!</h1>
<% end %>